<div class="container">
  <div class="text-center">
    <h1><%=@restaurant.name%></h1>
    <h2><%=@restaurant.address%></h2>
    <h1><%=@restaurant.category%></h1>
    <h1><%=@restaurant.phone_number%></h1>
    <% @restaurant.reviews.each do |review| %>
      <p><%= review.content %></p>
      <p><%= review.rating %></p>
    <% end %>
    <%= link_to "Ajouter un commentaire", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
    <%= link_to "retour", restaurants_path(@restaurants), class: "btn btn-primary" %>
  </div>
</div>

